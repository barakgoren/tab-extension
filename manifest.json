{
    "manifest_version": 3,
    "name": "Auto Tab Closer",
    "version": "1.0",
    "description": "Closes inactive tabs automatically after a set time.",
    "permissions": ["tabs", "storage"],
    "background": {
      "service_worker": "dist/background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "options_page": "options.html"
  }
  